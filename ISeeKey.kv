# kivy 1.0

[FListItem@SelectableView+BoxLayout]:
    size_hint_y: ctx.size_hint_y
    height: ctx.height
    ListItemButton:
        selected_color: 0, 0, 1, 1
        deselected_color: 0, 1, 0, 1
        text: ctx.text
        is_selected: ctx.is_selected
        on_release: app.root.current = 'main'

<AScreen>:
    canvas:
        Rectangle:
            source: 'image/iseekey05.jpeg'
            size: self.size
    Video:
        id: vd
        source: 'image/Media.mov'
        state: 'play'
    Button:
        font_name: 'Arial Narrow.ttf'
        font_size: 20
        pos_hint: { 'center_x' : .9, 'center_y' : .1 }
        size_hint: (.2,.05)
        text: 'Skip'
        on_press: root.manager.current = 'main'; vd.state = 'stop'
    Button:
        id: sign_up
        font_name: 'Arial Narrow.ttf'
        font_size: 14
        text: 'Sign in/up'
        size_hint: (.2,.05)
        pos_hint: { 'center_x' : .9, 'center_y' : .05}
        on_press: root.manager.current = 'sign'; vd.state = 'stop'

<SScreen>:
    canvas:
        Rectangle:
            source: 'image/iseekey05.jpeg'
            size: self.size
    TextInput:
        id: input_username
        text: 'username'
        pos_hint: { 'center_x' : .5, 'center_y' : .58 }
        size_hint: (.5,.06)
    TextInput:
        id: password
        text: 'password'
        pos_hint: { 'center_x' : .5, 'center_y' : .5 }
        size_hint: (.5,.06)
    Button:
        id: sign_in
        text: 'Sign In'
        pos_hint: { 'center_x' : .5, 'center_y' : .42 }
        size_hint: (.5,.06)
        on_press: app.sign_in()
        on_release: root.manager.current = 'main';

<CScreen>:
    canvas:
        Rectangle:
            source: 'image/iseekey06.png'
            size: self.size
    Button:
        font_size: 32
        text: 'Courseworks'
        pos_hint: { 'center_x' : .5, 'center_y' : .9}
        size_hint: (1,.2)

    Button:
        text: 'Next screen'
        font_size: 12
        pos_hint: { 'center_x' : .9, 'center_y' : .9 }
        size_hint: (.2,.05)
        on_release: root.manager.current = root.manager.next()

    Button:
        text: 'Previous screen'
        font_size: 12
        pos_hint: { 'center_x' : .1, 'center_y' : .9 }
        size_hint: (.2,.05)
        on_release: root.manager.current = root.manager.previous()

    FView:
        id: firstlevel
        size_hint: (1,.8)



<WView>:
    canvas:
        Rectangle:
            source: 'image/iseekey06.png'
            size: self.size

    orientation: 'vertical'

    Label:
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        id: cw_desc
        text: '......'
        font_size: 12
        color: [0,0,0,1]
        pos_hint: { 'center_x' : .5, 'center_y' : 1}
        size_hint: (.9,1)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        markup: True


    TextInput:
        id: input_speech
        text: 'Please press "Start" to start...'
        font_size: 12
        pos_hint: { 'center_x' : .5, 'center_y' : 1 }
        size_hint: (.9,1)

    BoxLayout:
        orientation: 'vertical'

        Label:
            canvas.before:
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            id: marks
            text: ''
            font_size: 12
            color: [0,0,0,1]
            pos_hint: { 'center_x' : .5, 'center_y' : .8}
            size_hint: (.9,1)
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            markup: True

        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: gsra_start
                text: 'Start'
                font_size: 12
                pos_hint: { 'center_x' : .3, 'center_y' : .5 }
                padding_top: 100
                size_hint: (.2,.2)
                on_press: root.gsra_start()

            Button:
                id: gsra_start
                text: 'Grade'
                font_size: 12
                pos_hint: { 'center_x' : .7, 'center_y' : .5 }
                padding_top: 100
                size_hint: (.2,.2)
                on_press: root.grade()

    BoxLayout:
        orientation: 'horizontal'

        Button:
            text: 'Stop'
            font_size: 12
            pos_hint: { 'center_x' : .2, 'center_y' : .5 }
            size_hint: (.2,.2)
            on_press: root.play_audio(0)
        Button:
            text: 'PlayBack'
            font_size: 12
            pos_hint: { 'center_x' : .4, 'center_y' : .5 }
            size_hint: (.2,.2)
            on_press: root.play_audio(102400)
        Button:
            id: cw_replay
            text: 'Play'
            font_size: 12
            pos_hint: { 'center_x' : .6, 'center_y' : .5 }
            size_hint: (.2,.2)
            on_press: root.play_audio(1)


